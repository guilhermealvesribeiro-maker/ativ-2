import 'dart:io';
import 'dart:math';

void main() {
  // Gera um n√∫mero aleat√≥rio entre 1 e 100
  int numeroSecreto = Random().nextInt(100) + 1;
  int? palpite;
  int tentativas = 0;

  print('=== Jogo de Adivinha√ß√£o ===');
  print('Tente adivinhar o n√∫mero entre 1 e 100.');

  // Loop at√© o usu√°rio acertar
  do {
    stdout.write('\nDigite seu palpite: ');
    palpite = int.tryParse(stdin.readLineSync() ?? '');
    tentativas++;

    if (palpite == null || palpite < 1 || palpite > 100) {
      print('Por favor, digite um n√∫mero v√°lido entre 1 e 100.');
      continue;
    }

    // Verifica se acertou
    if (palpite == numeroSecreto) {
      print('\nüéâ Parab√©ns! Voc√™ acertou o n√∫mero em $tentativas tentativa(s).');
    } else {
      // Usa operador tern√°rio para dar dica
      String dica = palpite > numeroSecreto ? 'Muito alto' : 'Muito baixo';
      print(dica);
    }
  } while (palpite != numeroSecreto);
}
