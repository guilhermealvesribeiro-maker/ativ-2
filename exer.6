import 'dart:io';

void main() {
  print('=== Cardápio do Restaurante ===');
  print('1 - Lasanha Bolonhesa ........ R\$ 25.00');
  print('2 - Frango Grelhado .......... R\$ 20.00');
  print('3 - Salada Caesar ............ R\$ 18.00');
  print('4 - Hambúrguer Artesanal ..... R\$ 22.00');
  stdout.write('\nEscolha uma opção (1 a 4): ');
  
  int? opcao = int.tryParse(stdin.readLineSync() ?? '');

  print('\n=== Resultado ===');
  switch (opcao) {
    case 1:
      print('Prato escolhido: Lasanha Bolonhesa');
      print('Valor a pagar: R\$ 25.00');
      break;
    case 2:
      print('Prato escolhido: Frango Grelhado');
      print('Valor a pagar: R\$ 20.00');
      break;
    case 3:
      print('Prato escolhido: Salada Caesar');
      print('Valor a pagar: R\$ 18.00');
      break;
    case 4:
      print('Prato escolhido: Hambúrguer Artesanal');
      print('Valor a pagar: R\$ 22.00');
      break;
    default:
      print('Opção inválida');
  }
}
